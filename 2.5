theta=1
def Umedian(x):
    i = 0
    vec = []
    while (i < len(x)-1):
        j = i + 1
        while (j <= len(x) - 1):
            vec.append((x[i] + x[j])/2)  
            j += 1
        i += 1
    return np.median(vec)
